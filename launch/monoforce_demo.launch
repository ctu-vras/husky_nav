<?xml version="1.0" encoding="UTF-8" ?>
<launch>
    <arg name="rviz" default="true" doc="Launch RViz for data visualization or not"/>
    <arg name="gui" default="false" doc="Launch Gazebo GUI or not"/>
    <arg name="world" default="$(dirname)/../worlds/farmWith1CropRow.world"/>
<!--    <arg name="world" default="$(dirname)/../worlds/simcity.world"/>-->
<!--    <arg name="world" default="$(dirname)/../worlds/simcity_dynamic.world"/>-->
<!--    <arg name="world" default="$(dirname)/../worlds/emptyfarm.world"/>--> -->
<!--     <arg name="world" default="$(dirname)/../worlds/rubicon.world"/> -->

    <!-- Gazebo world and spawn Husky robot -->
    <include file="$(dirname)/husky_gazebo.launch">
        <arg name="world" value="$(arg world)"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <!-- Inspection world and spawn Husky robot -->
<!--     <include file="$(dirname)/husky_inspection_world.launch"> -->
<!--         <arg name="gui" value="$(arg gui)"/> -->
<!--     </include> -->

    <!-- MonoForce pipeline -->
    <include file="$(find monoforce)/launch/monoforce.launch">
        <arg name="img_topic" value="/realsense_front/color/image_raw/compressed"/>
        <arg name="linear_vels" value="[1.]"/>
        <arg name="angular_vels" value="[0.]"/>
        <arg name="total_sim_time" value="8."/>
    </include>

    <!-- RViz -->
    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(dirname)/../config/monoforce.rviz"/>
</launch>
