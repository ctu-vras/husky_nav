<?xml version="1.0" encoding="UTF-8" ?>
<launch>
    <arg name="rviz" default="true" doc="Launch RViz or not"/>
    <arg name="gui" default="false" doc="Launch Gazebo GUI or not"/>
    <!-- World models-->
    <arg name="world" default="$(dirname)/../worlds/farmWith1CropRow.world"/>
<!--    <arg name="world" default="$(dirname)/../worlds/simcity.world"/>-->
<!--    <arg name="world" default="$(dirname)/../worlds/simcity_dynamic.world"/>-->
<!--    <arg name="world" default="$(dirname)/../worlds/emptyfarm.world"/>--> -->
<!--     <arg name="world" default="$(dirname)/../worlds/rubicon.world"/> -->
<!--     <arg name="world" default="$(find gazebo_cave_world)/worlds/cave_world.world"/> -->

    <!-- Gazebo world and spawn Husky robot -->
    <include file="$(dirname)/husky_gazebo.launch">
        <arg name="world" value="$(arg world)"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <!-- Inspection world and spawn Husky robot -->
<!--     <include file="$(dirname)/husky_inspection_world.launch"> -->
<!--         <arg name="gui" value="$(arg gui)"/> -->
<!--     </include> -->

    <!-- Height map estimation -->
    <include file="$(find monoforce)/launch/hm_estimator.launch">
        <arg name="pts_topics" value="[/points]"/>
<!--         <arg name="pts_topics" value="[/realsense_front/depth/color/points, -->
<!--                                        /realsense_right/depth/color/points]"/> -->
    </include>

    <!-- RViz -->
    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(find monoforce)/config/rviz/height_map.rviz"/>
</launch>
